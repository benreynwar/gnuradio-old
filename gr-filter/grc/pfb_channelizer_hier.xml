<?xml version="1.0"?>
<!--
###################################################
##Hierarchical Polyphase Channelizer
###################################################
 -->
<block>
	<name>Hierarchical Polyphase Channelizer</name>
	<key>pfb_channelizer_hier_ccf</key>
	<import>from gnuradio import filter</import>
	<make>filter.pfb.channelizer_hier_ccf(
	  $n_chans,
      $n_filterbanks,
	  $taps,
      $outchans,
	  $atten,
      $bw,
      $tb,
      $ripple
      )
	</make>
	<param>
		<name>Channels</name>
		<key>n_chans</key>
		<type>int</type>
	</param>
    <param>
      <name>Filterbanks</name>
      <key>n_filterbanks</key>
      <type>int</type>
      <value>2</value>
    </param>
	<param>
		<name>Taps</name>
		<key>taps</key>
		<value>None</value>
		<type>real_vector</type>
	</param>
	<param>
		<name>Output Channels</name>
		<key>outchans</key>
		<value>None</value>
		<type>int_vector</type>
	</param>
	<param>
		<name>Attenuation</name>
		<key>atten</key>
		<value>100</value>
		<type>real</type>
	</param>
	<param>
		<name>Pass Band Width/Channel Width</name>
		<key>bw</key>
		<value>1.0</value>
		<type>real</type>
	</param>
	<param>
		<name>Transition Band/Channel Width</name>
		<key>tb</key>
		<value>0.2</value>
		<type>real</type>
	</param>
	<param>
		<name>Pass Band Ripple in dB</name>
		<key>ripple</key>
		<value>1.0</value>
		<type>real</type>
	</param>
	<sink>
		<name>in</name>
		<type>complex</type>
	</sink>
	<source>
		<name>out</name>
		<type>complex</type>
		<nports>len($outchans)</nports>
	</source>
</block>
